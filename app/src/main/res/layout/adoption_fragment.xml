<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/adopt_disclaimer"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:id="@+id/adopt_disclaimer"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adoption_frag_description"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adoption_frag_call_button"
        android:background="@color/colorAccent"
        android:layout_marginRight="32dp"
        android:textColor="#FFFFFF"
        android:text="@string/adopt_call"
        android:contentDescription="@string/adopt_call"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adoption_frag_email_button"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:text="@string/adopt_email"
        android:contentDescription="@string/adopt_email"
        />

        </LinearLayout>

</LinearLayout>